<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cafeclaro"
    tools:context=".detalleLibroFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="408dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/lblTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:paddingLeft="10dp"
                    android:text="Titulo:" />

                <EditText
                    android:id="@+id/txtTitulo"
                    android:layout_width="425dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/lblAutor"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:paddingLeft="10dp"
                    android:text="Autor:" />

                <EditText
                    android:id="@+id/txtAutor"
                    android:layout_width="425dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/lblIsbn"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:paddingLeft="10dp"
                    android:text="Isbn:" />

                <EditText
                    android:id="@+id/txtIsbn"
                    android:layout_width="425dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/lblGenero"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:text="GÃ©nero:" />

                <EditText
                    android:id="@+id/txtGenero"
                    android:layout_width="425dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/lblDisponibles"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:paddingLeft="10dp"
                    android:text="Libros disponibles:" />

                <EditText
                    android:id="@+id/txtDisponibles"
                    android:layout_width="425dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/lblOcupados"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:paddingLeft="10dp"
                    android:text="Libros ocupados:" />

                <EditText
                    android:id="@+id/txtOcupados"
                    android:layout_width="425dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    android:translationX="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cafeoscuro"
                        android:text="Editar" />

                    <Button
                        android:id="@+id/btnEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cafeoscuro"
                        android:text="Eliminar" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>