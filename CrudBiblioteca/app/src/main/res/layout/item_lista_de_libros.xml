<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cafeclaro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="LISTADO DE LIBROS"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="89dp"
                    android:layout_height="90dp"
                    android:background="@drawable/librolista"
                    android:translationX="10dp" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:translationX="20dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:translationX="0dp">

                        <TextView
                            android:id="@+id/lblNameLibro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:translationY="15dp" />

                        <TextView
                            android:id="@+id/lblNombreAutor"
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="Autor"
                            android:textStyle="italic"
                            android:translationY="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/verde"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:textSize="10sp"
                            app:icon="@drawable/edit_svgrepo_com"
                            app:iconGravity="top" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:backgroundTint="@color/rojovino"
                            android:paddingTop="10dp"
                            android:textSize="10sp"
                            app:icon="@drawable/delete_sweep_svgrepo_com"
                            app:iconGravity="top" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>